                            <i class="fa-regular fa-clock-nine"></i><!--icono reloj-->
                            <p>Horario: Lunes a Viernes de 9 a 12hs. / 16 a 20hs.</p>
                        </div>
                        <a href="#" class="boton">Quienes Somos</a>
                    </div>

                    <img src="/public/img/Imagen frente del Centro.png" alt="Imagen 1">
    
                </div>
    
                <!--Segunda imagen del swiper-->
                <div class="swiper-slide">
                    <img src="/public/img/carrusel-bienvenida-2.jpg" alt="">
                </div>
    
                <!--Tercera imagen del swiper-->
                <div class="swiper-slide">
                    <img src="/public/img/carrusel-bienvenida-3.jpg" alt="">
                </div>
            </div>
    
            <!-- Paginación -->
            <div class="swiper-pagination"></div>
    
            <!-- Controles de navegación -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
    
        </div>
    </section>


