<!DOCTYPE html>
<html lang="es">
<head>
</head>
<body>
    <h1>Listado de Médicos</h1>

    <!-- Botón para crear un nuevo médico -->
    <a href="/medico/nuevo" style="margin-bottom: 15px; display: inline-block;">
        <button type="button">Crear Nuevo Médico</button>
    </a>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>ID Usuario</th>
                <th>ID Especialidad</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% if (usuarios && usuarios.length > 0) { %>
                <% usuarios.forEach(medico => { %>
                    <tr>
                        <td><%= medico.id %></td>
                        <td><%= medico.id_usuario %></td>
                        <td><%= medico.id_especialidad %></td>
                        <td><%= medico.telefono %></td>
                        <td>
                            <div class="actions">
                                <!-- Botón para editar el médico -->
                                <a href="/medico/<%= medico.id %>/editar">
                                    <button type="button">Editar</button>
                                </a>
                                <!-- Botón para eliminar el médico -->
                                <form action="/medico/<%= medico.id %>/eliminar" method="POST" style="display:inline;">
                                    <button type="submit" onclick="return confirm('¿Estás seguro de eliminar este médico?');">Eliminar</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5">No hay médicos disponibles</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
